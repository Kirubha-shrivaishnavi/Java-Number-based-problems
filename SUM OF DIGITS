SUM OF DIGITS

import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int sum = 0;
        int rem = 0;
        while(a!=0){
            rem = a%10;
            a = a/10;
            sum+=rem;
        }
        System.out.println(sum);
    }
}
